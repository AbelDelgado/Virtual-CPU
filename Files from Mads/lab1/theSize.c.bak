#include <stdio.h>

int main()
{
    char a;
    short b;
    int c;
    long d;
    float e;
    double f;
    int *varptr;


    printf("Size of char: %d bytes\n",(int)sizeof(a));
    printf("Size of short: %d bytes\n",(int)sizeof(b));
    printf("Size of int: %d bytes\n",(int)sizeof(c));
    printf("Size of long: %d byte\n",(int)sizeof(d));
    printf("Size of float: %d bytes\n", (int)sizeof(e)); 
    printf("Size of double: %d bytes\n", (int)sizeof(f));
    printf("Size of variable pointer: %d bytes\n", (int)sizeof(varptr));
    printf("Size of pointer to code: %d bytes\n", (int)sizeof(&printf));
    return 0;
}
